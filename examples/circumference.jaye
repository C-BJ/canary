const std = import("std")

const main: int() = {
    const PI: float = 3.14159

    print("1. Circumference")
    print("2. Radius")
    val type: i8 = read(">> ")

    if(type == "1") {
        val d: i64 = read(">> ")
        print("The answer is: ", PI*d)
    } else if(type == 2) {
        val r: i64 = read(">> ")
        print("The answer is: ", (2*PI)*r)
    } else {
        print("Not a valid option.")
    }
}
